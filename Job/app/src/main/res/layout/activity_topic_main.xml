<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

    <!-- Header-->
    <LinearLayout
        android:orientation="horizontal"
        style="@style/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:paddingStart="5dp"
            android:clickable="true"
            android:src="@drawable/turn_left"
            android:id="@+id/turn_left"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="15sp"
            android:gravity="center"
            android:text="@string/jobMarket"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/topic"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/topic"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:textSize="15sp"
            android:gravity="center"
            android:text="@string/edit"
            android:textColor="#ffffff"
            android:paddingEnd="5dp"/>

    </LinearLayout>

    <!-- myTopic -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView

            android:id="@+id/myTopic"
            android:paddingStart="5dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/myTopic"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff">

        <TextView

            android:id="@+id/myTopic1"
            android:paddingStart="5dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/myTopic1"
            android:textSize="14sp"/>

        <ImageView
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <TextView

            android:id="@+id/myTopic2"
            android:paddingStart="5dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/myTopic2"
            android:textSize="14sp"/>

    </LinearLayout>

    <!-- hotTopic-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView

            android:id="@+id/hotTopic"
            android:paddingStart="5dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/hotTopic"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff">

        <TextView

            android:id="@+id/hotTopic1"
            android:paddingStart="5dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/hotTopic1"
            android:textSize="14sp"/>

        <ImageView
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <TextView

            android:id="@+id/hotTopic2"
            android:paddingStart="5dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/hotTopic2"
            android:textSize="14sp"/>

        <ImageView
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <TextView

            android:id="@+id/hotTopic3"
            android:paddingStart="5dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/hotTopic3"
            android:textSize="14sp"/>

    </LinearLayout>


</LinearLayout>