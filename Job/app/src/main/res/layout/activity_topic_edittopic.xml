<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

    <!-- Header-->
    <LinearLayout
        android:orientation="horizontal"
        style="@style/header"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:paddingLeft="5dp"
            android:clickable="true"
            android:src="@drawable/turn_left"
            android:id="@+id/turn_left"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/jobMarket"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/topic"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            style="@style/text_title"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/topic"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/finished"
            android:textColor="#ffffff"
            android:paddingRight="5dp" />

    </LinearLayout>

    <!-- myTopic -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:paddingLeft="10dp"
            android:id="@+id/myTopic"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/myTopic"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView

            android:paddingLeft="10dp"
            android:id="@+id/myTopic1"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/myTopic1"
            android:textSize="14sp" />

        <ImageView
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <TextView

            android:paddingLeft="10dp"
            android:id="@+id/myTopic2"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/myTopic2"
            android:textSize="14sp"/>

        <ImageView
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <TextView

            android:paddingLeft="10dp"
            android:id="@+id/addTopicB"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="#0070ee"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/addTopic"
            android:textSize="14sp"
            android:drawableLeft="@drawable/add" />

    </LinearLayout>

    <!-- hotTopic-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:paddingLeft="10dp"
            android:id="@+id/hotTopic"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/hotTopic"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView

            android:paddingLeft="10dp"
            android:id="@+id/hotTopic1"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/hotTopic1"
            android:textSize="14sp"/>

        <ImageView
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <TextView

            android:paddingLeft="10dp"
            android:id="@+id/hotTopic2"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/hotTopic2"
            android:textSize="14sp"/>

        <ImageView
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <TextView

            android:paddingLeft="10dp"
            android:id="@+id/hotTopic3"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/hotTopic3"
            android:textSize="14sp"/>

    </LinearLayout>


</LinearLayout>