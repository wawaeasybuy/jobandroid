<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/round_layout"
        android:id="@+id/position_recommend2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/positionName"
                android:text="@string/position_recommend_title" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/positionName"
                android:id="@+id/top"
                android:layout_marginLeft="20dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@drawable/top_round"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:text="顶"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/top"
                android:id="@+id/urg"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/urg_round"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:text="急"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:id="@+id/timeUpdate"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/position_recommend_time" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:maxEms="15"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/city"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/position_recommend_place" />


            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </LinearLayout>

            <TextView
                android:id="@+id/salary"
                android:textSize="13sp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:text="@string/position_recommend_salary" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>