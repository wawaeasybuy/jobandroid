<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        style="@style/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/header">

        <ImageView
            android:paddingLeft="5dp"
            android:clickable="true"
            android:src="@drawable/turn_left1"
            android:id="@+id/turn_left"
            android:layout_width="25dp"
            android:layout_height="25dp" />

    <!--    <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/position_search_result"
            android:textColor="#ffffff" />    -->

        <EditText
            android:id="@+id/position_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text=""
            android:layout_height="wrap_content"
            android:hint="@string/position_search_content"
            android:textSize="13sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"/>

        <!--   <TextView
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:textSize="16sp"
             android:gravity="center"
             android:text="@string/position_search_result"
             android:textColor="#0070ee" />  -->


        <ImageView
               android:layout_marginRight="10dp"
               android:clickable="true"
               android:src="@drawable/u10"
               android:id="@+id/position_header_search"
               android:layout_width="20dp"
               android:layout_height="20dp" />

    </LinearLayout>

   <!-- <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:text="@string/search_history" />  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_history1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/search_history1" />

        <ImageView
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <TextView
            android:id="@+id/search_history2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/search_history2" />

        <ImageView
            android:background="#EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:id="@+id/search_history_delete"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/trash_black"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/search_history_delete" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>