<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

    <LinearLayout
        android:orientation="vertical"
        android:background="#ffffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/firmName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杭州马马网络科技有限科技公司"
            android:textSize="14dp"
            android:textColor="#111111"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />
        <ImageView
            android:id="@+id/blackLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eeeeee"/>
        <LinearLayout
            android:id="@+id/position1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/positionFirst"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/positionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品运营"
                    android:textSize="14dp"
                    android:textColor="#333333"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="8dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/positionSecond"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="杭州滨江区"
                    android:textSize="12dp"
                    android:textColor="#999999"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月薪3000+提成"
                    android:textSize="12dp"
                    android:textColor="#999999"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/blackLine2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eeeeee"/>
        <LinearLayout
            android:id="@+id/position2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/success"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="投递成功"
                android:textSize="12dp"
                android:textColor="#999999"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08-19 15:30"
                android:textSize="12dp"
                android:textColor="#999999"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="15dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>