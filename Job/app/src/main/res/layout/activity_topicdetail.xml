<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Header-->
    <LinearLayout
        android:orientation="horizontal"
        style="@style/header"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/turn_left"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:paddingLeft="5dp"
                android:src="@drawable/turn_left"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="16sp"
                android:gravity="center"
                android:text="@string/topic"
                android:textColor="#ffffff" />

        </LinearLayout>

        <TextView
            android:id="@+id/topicDetail"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            style="@style/text_title"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/topicDetail"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/topicDetail"
            android:textColor="#0070ee"
            android:paddingRight="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#D2E9FF"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/topicData">

            <TextView
                android:id="@+id/topicDataT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/home_interest"
                android:text="@string/topicData"
                android:paddingLeft="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/hotTopic">

            <TextView
                android:id="@+id/hotTopicT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/home_interest"
                android:text="@string/hotTopic"
                android:paddingLeft="20dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/topicAbout">

            <TextView
                android:id="@+id/topicAboutT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/home_interest"
                android:text="@string/topicAbout"
                android:paddingLeft="20dp" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/topicDetail_content">



    </LinearLayout>

  <!--  <include layout="@layout/fragment_topicdetail_data"></include>   -->

</LinearLayout>