<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  Header -->
    <LinearLayout
        android:orientation="horizontal"
        style="@style/header"
        android:layout_width="match_parent"
        android:background="#FBFBFB"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/turn_left"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:src="@drawable/turn_left_blue"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <TextView
            android:id="@+id/industry"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="@string/classify"
            android:textSize="20sp"/>

        <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingRight="15dp"
                android:textColor="#C9C9C9"
                android:textSize="16sp"
                android:gravity="center"
                android:text="@string/personal_register" />  -->

        <ImageView
            android:id="@+id/search"
            android:src="@drawable/zc_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingRight="10dp"
            android:gravity="center"/>

    </LinearLayout>

    <ImageView
        android:background="#0080fe"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!--  Content -->
    <!--  Select -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F8F8F8"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:maxEms="5"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/address_text"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/position_area" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:id="@+id/turn_one"
                android:layout_width="10dp"
                android:layout_height="8dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#eeeeee"/>

        <LinearLayout
            android:id="@+id/position_Layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:maxEms="5"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/position_Text"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/position_classify" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:id="@+id/position_Img"
                android:layout_width="10dp"
                android:layout_height="8dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#eeeeee"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/internships_intelligent_sorting" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:id="@+id/turn_three"
                android:layout_width="10dp"
                android:layout_height="8dp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>

    <LinearLayout
        android:background="#c7c7c7"
        android:id="@+id/selectAddress"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <ListView
            android:id="@+id/lv1"
            android:background="#ffffff"
            android:layout_width="0dp"
            android:divider="#00000000"
            android:dividerHeight="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </ListView>
        <ImageView
            android:id="@+id/img_1"
            android:background="#eaeaea"
            android:layout_width="0.5dp"
            android:layout_height="match_parent" />
        <ListView
            android:background="#ffffff"
            android:id="@+id/lv2"
            android:layout_width="0dp"
            android:divider="#00000000"
            android:dividerHeight="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </ListView>
        <ImageView
            android:id="@+id/img_2"
            android:background="#eaeaea"
            android:layout_width="0.5dp"
            android:layout_height="match_parent" />
        <ListView
            android:background="#ffffff"
            android:id="@+id/lv3"
            android:layout_width="0dp"
            android:divider="#00000000"
            android:dividerHeight="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

    <ListView
        android:background="#ffffff"
        android:id="@+id/lv_position_pull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:background="#ffffff"
            android:id="@+id/lv_job"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>